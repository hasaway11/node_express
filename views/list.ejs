<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="/list.css" rel="stylesheet">
  </head>
  <body>
    <div id="app">
      <form action="/todo/add" method="post">
        <div class="mb-3 mt-3">
          <label class="form-label">할일:</label>
          <input type="text" id="title" class="form-control" name="title">
        </div>
        <div class="mb-3 mt-3">
          <button class="btn btn-danger">작성</button>
        </div>
      </form>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>할일번호</th>
            <th>제목</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% todos.forEach(todo => { %>
            <tr>
              <td><%= todo.tno %></td>
              <td class="<%= todo.finish ? 'finish' : '' %>">
                <%= todo.finish ? todo.title + ' (완료)' : todo.title %>
              </td>
              <td>
                <form action="/todo/toggle" method="post">
                  <input type="hidden" name="tno" value="<%=todo.tno %>" >
                  <button class="btn btn-primary">
                    <%= todo.finish? '작업중으로' : '완료로' %>
                  </button>
                </form>
              </td>
              <td>
                <form action="/todo/delete" method="post">
                  <input type="hidden" name="tno" value="<%=todo.tno %>" >
                  <button class="btn btn-warning">삭제</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>